#生成随机密码
import random
from string import ascii_letters,digits

all_chs = ascii_letters + digits

def mk_passwd(n=8):
    result = ''

    for i in range(n):
        ch = random.choice(all_chs)
        result += ch

    return  result

if __name__ == '__main__':
    a = mk_passwd()
    b = mk_passwd(4)
    print(a)
    print(b)

#创建文件
#编写程序,要求用户输入文件名
#如果文件已存在,要求用户重新输入
#提示用户输入数据,每行数据先写到列表中
#将列表数据写入到用户输入的文件名中
import os

def get_filename():
    '用于获取文件名'
    while True:
        fname = input('filename: ')
        if not os.path.exists(fname):
            break
        print('%s 文件已存在,请重试' % fname)
    return fname

def get_content():
    '用于获取文件内容'
    content = []
    print('请输入内容,单独一行输入end结束!')
    while True:
        line = input('>')
        if line == 'end':
            break
        content.append(line)

    return content

def writefile(fname,content):
    '将content内容写到文件fname中'
    with open(fname, 'w') as fobj:   #fileobject 文件对象
        fobj.writelines(content)


if __name__ == '__main__':
    fname = get_filename()
    content = get_content()
    content = ['%s\n' % line for  line in content]
    writefile(fname,content)
